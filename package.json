{
  "name": "inpayment-sdk",
  "version": "1.1.6",
  "workspaces": [
    "examples/*"
  ],
  "description": "Web3支付SDK，通过项目ID获取合约地址与合约交互",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "cd examples && pnpm run dev",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts --config eslint.config.js",
    "lint:fix": "eslint . --ext .ts --fix --config eslint.config.js",
    "prepublishOnly": "pnpm run build && pnpm test",
    "prepare": "husky",
    "version": "pnpm run lint:fix && git add -A",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "web3",
    "payment",
    "ethereum",
    "blockchain",
    "sdk"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArkExlabs/inpayment-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/ArkExlabs/inpayment-sdk/issues"
  },
  "homepage": "https://github.com/ArkExlabs/inpayment-sdk#readme",
  "directories": {
    "test": "test"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@9.9.0+sha512.60c18acd138bff695d339be6ad13f7e936eea6745660d4cc4a776d5247c540d0edee1a563695c183a66eb917ef88f2b4feb1fc25f32a7adcadc7aaf3438e99c1",
  "devDependencies": {
    "@types/node": "22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "@vitest/coverage-v8": "^3.1.1",
    "dotenv": "16.5.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "ethers": "^6.13.5",
    "husky": "9.1.7",
    "lint-staged": "15.5.0",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vite": "^6.2.5",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "dayjs": "1.11.13"
  }
}
